<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewContainerLead"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginHorizontal="@dimen/activity_half_margin"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/text_margin"
    app:cardElevation="@dimen/text_half_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/imageFormula"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:adjustViewBounds="true"
            android:padding="@dimen/activity_vertical_margin"
            android:background="@color/white"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@id/buttonShare"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonShare"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="@string/share"
            app:icon="@drawable/ic_share"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/activity_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>